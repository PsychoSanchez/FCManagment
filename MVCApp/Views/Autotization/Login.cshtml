@using MVCApp.Controllers
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!AutotizationController.isAutorized)
{

    <h2>Авторизация</h2>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @if (!AutotizationController.firsttry)
                {
                    <div class="row">
                        <div class="alert alert-danger fade in">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Упс!</strong>Попытка авторизации неудачна, попробуйте снова
                        </div>
                    </div>
                }
                @using (Html.BeginForm("Login", "Autotization", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1">Электронная почта</label>
                        <input name="username" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Пароль</label>
                        <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-default">Авторизоваться</button>
                }
            </div>
        </div>
    </div>
}
else
{
    <h2>Здравствуйте @AutotizationController.Username</h2>
}
