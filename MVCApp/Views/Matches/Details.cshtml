@model MVCApp.Matches

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Матч против команды @Model.EnemyTeam</h2>

<div>
    <h4>Официальные матчи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Результат матча
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Result)
        </dd>

        <dt>
            Дата проведения матча
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Стадион
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stadiums.Name)
        </dd>

        <dt>
            Турнир
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tournaments.Name)
        </dd>
        <dt>
            Сезон
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tournaments.Season)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MatchID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
