@model IEnumerable<MVCApp.Mans>
@using MVCApp.Controllers

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
                @Html.DisplayFor(modelItem => item.FirstName)
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersosnalPosition.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @item.Birthday.Value.ToString("dd-MMM-yyyy")
            </td>
            @*@if (item.Address == null)
                        {
                    <td>Нет</td>
                }
                else
                {
                    <td>@item.Address</td>
                }*@
            @if (item.PhoneNumber == null)
                {
                <td>Не указано</td>
            }
            else
            {
                <td>@item.PhoneNumber</td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Nationalities.Nationality)
            </td>
            <td>
                <form class="form-inline">

                    <div class="btn-group form-group">
                        <a href="/Mans/Details/@item.ManID" id="Details" class="btn btn-default btn-xs" name="ManID">Профиль</a>
                        @if (AutotizationController.role == 14)
                        {
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                    Действия <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Редактировать", "Edit", new { id = item.ManID })</li>
                                    <li>
                                        @Html.ActionLink("Удалить", "Delete", new { id = item.ManID })
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </form>

            </td>
        </tr>
    }
